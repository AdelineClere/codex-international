                                <li role="presentation" ><a href="{{ path('category',{slug : category7.slug}) }}">{{ category7.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category8.slug}) }}">{{ category8.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category9.slug}) }}">{{ category9.titre }}</a></li>
                            </ul>
                        </div>
                    </div>
            </section>
        </div>
    </div>
