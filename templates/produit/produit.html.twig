{% endblock %}


{% block body %}


    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-sm-8 category-pdt">
                <h2 class="mt-4">{{ category.titre }}</h2>
                <p>{{ category.description | raw }}</p>
            
                <div class="col-sm-6 liste-produits">    
                    {% for produit in produits %}
                    <ul class="liste-produits">
                        <li>                          
                            <a class="produits-pdf" href="{{ asset(produit.pdf)}}" target="_blank">
                                {{ produit.nom }}
                            </a>                           
                        </li>
                    </ul>
                    {% endfor %}
                </div>
            </div>
            {% for stocks in stock %}   
                <div class="col-sm-4 aside">
                    <a class="btn btn-primary btn-lg" href="{{ path('contact')}}">{{ 'devis' | trans }}</a><br>
                    <a class="btn btn-primary btn-lg" href="{{asset(stocks.getPdfNom) }}" target="_blank">{{ 'stocks' | trans }}</a>
                </div>
            {% endfor %}
