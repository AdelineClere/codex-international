{% extends "admin/layout_admin.html.twig" %}

{% block body %}
    
      <div class="card mb-3">
        <div class="card-header">
          <h4><i class="fa fa-table"></i> Ajouter, modifier, ou supprimer une catégorie de la base de données</h4></div>
            <a class="btn btn-primary" href="{{path('add_category')}}"><i class="fa fa-plus"></i> Ajouter une catégorie</a>

          
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>

                  <th>Titre</th>
                  <th>Description(FR)</th>
                  <th>Langue</th>
                  <th>Title</th>
                  <th>Description(EN)</th>
                  <th>Language</th> 
                  <th>Actions</th>
                  
                  
                  
                </tr>
              </thead>
              <tfoot>
                <tr>

                  <th>Titre</th>
                  <th>Description(FR)</th>
                  <th>Langue</th>
                  <th>Title</th>
                  <th>Description(EN)</th>
                  <th>Language</th> 
                  <th>Actions</th>

                 
                  
                </tr>
              </tfoot>
              
              <tbody>
              {% for category in categories %}
                <tr>

                  <td>{{ category.translate('fr').titre }}</td>
                  <td>{{ category.translate('fr').description | striptags }}</td>
                  <td>{{ category.translate('fr').locale }}</td>
                  <td>{{ category.translate('en').titre }}</td>
                  <td>{{ category.translate('en').description | striptags }}</td>
                  <td>{{ category.translate('en').locale }}</td>

                  <td><a class="btn btn-danger" href="{{ path('delete_category', {'id' : category.id}) }}"><i class="fa fa-trash"></i></a>
                   <a class="btn btn-success" href="{{ path('edit_category', {'id' : category.id}) }}"><i class="fa fa-edit"></i></a></td>
                </tr>
                   {%endfor%}
              
              
            </table>
          </div>
        </div>
               
                   
    <hr>
    
  
    
{% endblock %}
