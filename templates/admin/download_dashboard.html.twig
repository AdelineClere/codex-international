{% extends "admin/layout_admin.html.twig" %}

{% block body %}
    
      <div class="card mb-3">
        <div class="card-header">
          <h4><i class="fa fa-table"></i> Ajouter, modifier, ou supprimer un download de la base de donn√©es</h4></div>
            <a class="btn btn-primary" href="{{path('add_download')}}"><i class="fa fa-plus"></i> Ajouter un download</a>

          
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>

                  <th>Sujet</th>
                  <th>Description(FR)</th>
                  <th>Langue</th>
                  <th>Sujet</th>
                  <th>Description(EN)</th>
                  <th>Language</th> 
                  <th>Actions</th>
                  
                  
                  
                </tr>
              </thead>
              <tfoot>
                <tr>

                  <th>Sujet</th>
                  <th>Description(FR)</th>
                  <th>Langue</th>
                  <th>Sujet</th>
                  <th>Description(EN)</th>
                  <th>Language</th> 
                  <th>Actions</th>

                 
                  
                </tr>
              </tfoot>
              
              <tbody>
              {% for download in downloads %}
                <tr>

                  <td>{{ download.translate('fr').sujet }}</td>
                  <td>{{ download.translate('fr').description }}</td>
                  <td>{{ download.translate('fr').locale }}</td>
                  <td>{{ download.translate('en').sujet }}</td>
                  <td>{{ download.translate('en').description }}</td>
                  <td>{{ download.translate('en').locale }}</td>

                  <td><a class="btn btn-danger" href="{{ path('delete_download', {'id' : download.id}) }}"><i class="fa fa-trash"></i></a>
                   <a class="btn btn-success" href="{{ path('edit_download', {'id' : download.id}) }}"><i class="fa fa-edit"></i></a></td>
                </tr>
                   {%endfor%}
              
              
            </table>
          </div>
        </div>
               
                   
    <hr>
    
  
    
{% endblock %}