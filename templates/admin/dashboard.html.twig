{% extends "admin/layout_admin.html.twig" %}

{% block body %}
      <div class="card mb-3">
        <div class="card-header">
          <h4><i class="fa fa-table"></i> Ajouter, modifier, ou supprimer un utlisateur de la base de données</h4></div>
            <a class="btn btn-primary" href="{{path('add_user')}}"><i class="fa fa-plus"></i> Ajouter un utilisateur</a>

          
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Société</th>
                  <th>Téléphone</th>
                  <th>Rôles</th>
                  <th>Commandes</th>
                  <th>Actions</th>
                  
                  
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Email</th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Société</th>
                  <th>Téléphone</th>
                  <th>Rôles</th>
                  <th>Commandes</th>
                  <th>Actions</th>
                  
                </tr>
              </tfoot>
              <tbody>
                  {%for user in users %}
                <tr>
                  <td>{{user.email}}</td>
                  <td>{{user.nom}}</td>
                  <td>{{user.prenom}}</td>
                  <td>{{user.societe}}</td>
                  <td>{{user.telephone}}</td>
                  <td>{% for role in user.roles %} {{ role}} {%endfor%}</td>
                  <td>{{user.cumulCommande}}</td>
                 {# <td><a href="/admin/delete/user/4">...</td> #}
                  <td><a class="btn btn-danger" href="{{ path('delete_user', {'id' : user.id}) }}"><i class="fa fa-trash"></i></a>
                   <a class="btn btn-success" href="{{ path('edit_user', {'id' : user.id}) }}"><i class="fa fa-edit"></i></a></td>
                </tr>
                   {%endfor%}
              </tbody>
            </table>
          </div>
        </div>

    
{% endblock %}