{% extends "admin/layout_admin.html.twig" %}

{% block body %}
      <div class="card mb-3">
        <div class="card-header">
          <h4><i class="fa fa-table"></i> Ajouter, modifier, ou supprimer un produit de la base de donn√©es</h4></div>
            <a class="btn btn-primary" href="{{path('add_produit')}}"><i class="fa fa-plus"></i> Ajouter un produit</a>

          
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Langue</th>
                  <th>Name</th>
                  <th>Language</th>
                  <th>Actions</th>                 
                </tr>
              </thead>

              <tfoot>
                <tr>
                  <th>Nom</th>
                  <th>Langue</th>
                  <th>Name</th>
                  <th>Language</th>
                  <th>Actions</th>
                </tr>
              </tfoot>

              <tbody>
                  {%for produit in produits %}
                <tr>
                  <td>{{ produit.translate('fr').nom }}</td>
                  <td>{{ produit.translate('fr').locale }}</td>
                  <td>{{ produit.translate('en').nom }}</td>
                  <td>{{ produit.translate('en').locale }}</td>

                  <td><a class="btn btn-danger" href="{{ path('delete_produit', {'id' : produit.id}) }}"><i class="fa fa-trash"></i></a>
                   <a class="btn btn-success" href="{{ path('edit_produit', {'id' : produit.id}) }}"><i class="fa fa-edit"></i></a></td>
                </tr>
                   {%endfor%}
                   
             </table>
          </div>
        </div>
                   
    
{% endblock %}