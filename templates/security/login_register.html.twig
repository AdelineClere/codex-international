{% extends 'base2.html.twig' %}



{% block body %}



    <!-- contact form start -->
    <section class="contact-form">
        <div class="container">   
            <!-- contact form start -->

            <div class=" col-md-6 col-md-offset-1 enregistrement">
                <div class="row">
                    <form method="post" action="{{ path('register') }}" id="enregistr">
                        <div class="block">
                            {{ form_start(form) }}
                            <h3 class="annonce"><strong>Enregistrez-vous</strong> pour participer à notre programme<br> de fidélisation original et convivial : <span class="apero-labo">l'apéro labo</span></h3>
                            <br>
                            <div class=" col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.prenom, { attr : { placeholder : 'First Name' } }) }}
                                </div>
                            </div>
                            <div class=" col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.nom, { attr : { placeholder : 'Last Name' } }) }}
                                </div>
                            </div>
                            <div class=" col-md-8">
                                <div class="form-group">
                                    {{ form_row(form.societe, { attr : { placeholder : 'Firm' } }) }}
                                </div>
                            </div>
                            <div class=" col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.telephone, { attr : { placeholder : 'Tel' } }) }}
                                </div>
                            </div>
                            <div class=" col-md-12">
                                <div class="form-group">
                                    {{ form_row(form.email, { attr : { placeholder : 'Email' } }) }}
                                </div>
                            </div>
                            <div class=" col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.plainPassword.first, { attr : { placeholder : 'mdp' } }) }}
                                </div>
                            </div>

                            <div class=" col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.plainPassword.second, { attr : { placeholder : 'mdp' } }) }}
                                </div>
                            </div>
                            <br>
                            <div class=" col-md-12">
                                <button class="btn btn-default col-xs-12" type="submit">{{ 'enregistrer' | trans }}</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-3 col-md-offset-1 connexion">
                {% if error is defined and error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="row">
                    <form id="conmexion" action="{{ path('loginregister') }}" method="post">
                        <div class="block">
                            <h3><strong>{{ 'connexion' | trans }}</strong></h3>
                            <div class="form-group">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'mdp' | trans }}" />
                            </div>
                        </div>
                        <button class="btn btn-default col-xs-12" type="submit">{{ 'connexion' | trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </section>



{% endblock %}





