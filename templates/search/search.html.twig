{% extends 'base.html.twig' %}

{% block slider %}
    <div class="container-fluid">
        <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel" data-pause="null">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="images/carousel/biotech3.jpg" alt="biotech-codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/deco.jpg" alt="deco-codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/glass-lenses.jpg" alt="glass-lenses--codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/nanotech2.jpg" alt="nanotech-codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/tribology.jpg" alt="tribology-codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/pzt.jpg" alt="codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/solaire3.jpg" alt="solaire-codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/mems_hardware.jpg" alt="mems_hardware--codex" style="width:100%;">
                </div>

                <div class="item">
                    <img src="images/carousel/processeur.jpg" alt="processeur-codex" style="width:100%;">
                </div>

                <div class="fadeIn-home">
                    <h1 class="animated fadeInUp">Codex International <br>  &#38; Best materials, Excellence services</h1>
                </div>
            </div>

        </div>
    </div>
    <!-- NAV CATEGORIE + search --> 
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-md-offset-9">
                <div class="input-group input-search">
                    <form method="get" action="{{path('search')}}">
                        <div class="input-group input-search">
                            <input type="text" class="loupe"  name="form" placeholder=" {{ 'search' | trans }}"> 
                            <div class="input-group-addon"><button type="submit" class="btn btn-loupe"> <i class="fa fa-search"></i></button></input></div>
                        </div>
                    </form>
                </div>
            </div>
            {% if not productFound %}
                <div class="row">
                    <div class="col-xs-12">
                        <h5 class="search-0">Aucune réponse à votre recherche</h5>
                        <br>
                    </div>
                </div>
            {% endif %} 
            <section class="nav2">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="titre-nav2">
                                <h2>{{ 'Codex_fabrication' | trans }}</h2>
                                <h2>{{ 'Codex_fabrication2' | trans }}</h2>
                            </div>
                            <ul class="nav nav-pills col-md-12 nav-categories">
                                <li role="presentation" class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        {{ 'Category_1' | trans }} <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li role="presentation" ><a href="{{ path('category',{slug : category0.slug}) }}">{{ category0.titre }}</a></li>
                                        <li role="presentation" ><a href="{{ path('category',{slug : category1.slug}) }}">{{ category1.titre }}</a></li>
                                        <li role="presentation" ><a href="{{ path('category',{slug : category2.slug}) }}">{{ category2.titre }}</a></li>
                                        <li role="presentation" ><a href="{{ path('category',{slug : category3.slug}) }}">{{ category3.titre }}</a></li>
                                    </ul>
                                </li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category4.slug}) }}">{{ category4.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category5.slug}) }}">{{ category5.titre }}</a></li>
                            </ul>  
                        </div>

                        <div class="col-md-7">
                            <h2>{{ 'Codex_fournisseur' | trans }}</h2>
                            <h2>{{ 'Codex_fournisseur2' | trans }}</h2>

                            <ul class="nav nav-pills col-md-12 nav-categories">
                                <li role="presentation" ><a href="{{ path('category',{slug : category6.slug}) }}">{{ category6.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category7.slug}) }}">{{ category7.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category8.slug}) }}">{{ category8.titre }}</a></li>
                                <li role="presentation" ><a href="{{ path('category',{slug : category9.slug}) }}">{{ category9.titre }}</a></li>
                            </ul>
                        </div>
                    </div>
            </section>
        </div>
    </div>
    <!-- end NAV CATEGORIE + search -->


{% endblock %}



{% block body %}

    <h1>{# {{ productFound.pdf }} #}</h1>
    <div class="container">
        <div class=row">
            <div class="col-md-8 col-md-offset-2 col-sm-12">
                {% for product in productFound %}
                    <h2><a href="{{ asset(product.pdf) }}" >{{ product.nom }}</a></h2>
                    <h3>{{ product.category.titre }}</h3>
                    <h5>{{ product.category.description }}</h5>
                    <br>
                {% endfor %}  
            </div>
        </div>
    </div>

{% endblock %}
