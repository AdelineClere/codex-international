                {% for stocks in stock %}   
                        <h4><a href="{{ asset(stocks.pdfNom) }}" target="_blank">{{ 'contactStock' | trans }}</a></h4>
                {% endfor %}
                </div>
            </div>
                
                {#{%if error%}
